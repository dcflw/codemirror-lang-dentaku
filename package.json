{
  "name": "codemirror-lang-dentaku",
  "version": "1.0.0",
  "description": "CodeMirror support for the Dentaku formula language",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "check-formatting": "prettier --check --cache .",
    "format": "prettier --write --cache .",
    "lint": "eslint './src/**/*.{ts,tsx}' --cache",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix --cache",
    "typecheck": "tsc --project .github/tsconfig.ci.json",
    "test": "vitest"
  },
  "devDependencies": {
    "@lezer/generator": "^1.5.1",
    "@lezer/lr": "^1.3.14",
    "@total-typescript/ts-reset": "^0.5.1",
    "@tsconfig/recommended": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "author": "Docfield Team",
  "tags": [
    "codemirror",
    "language",
    "dentaku",
    "formula"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@codemirror/autocomplete": "^6.11.0",
    "@codemirror/language": "^6.9.2",
    "@codemirror/lint": "^6.4.2",
    "@lezer/highlight": "^1.2.0",
    "unplugin-lezer": "^1.0.0"
  }
}
